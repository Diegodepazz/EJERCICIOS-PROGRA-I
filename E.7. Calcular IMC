#include <iostream>
using namespace std;

int main()
{
 
 double peso;
 double altura;
 double imc;
 
 cout<<"Introduce tu altura y peso para saber tu IMC: \n";
 cout<<"Dime tu altura en metros \n";
 cin>>altura;
 
 cout<<"Dime tu peso en kilogramos \n";
 cin>>peso;
 
 imc = peso / (altura * altura);
 cout << "Tu índice de masa corporal es: " << imc <<"\n"; 
 
if (imc < 18.5) {
        cout << "Clasificación: Bajo peso" << "\n";
    }
    if (imc >= 18.5 && imc < 24.9) {
        cout << "Clasificación: Peso normal" << "\n";
    }
    if (imc >= 25 && imc < 29.9) {
        cout << "Clasificación: Sobrepeso" << "\n";
    }
    if (imc >= 30) {
        cout << "Clasificación: Obesidad" << "\n";
    }
   
    return 0; 
}
