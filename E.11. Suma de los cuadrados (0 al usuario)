#include <iostream>
  using namespace std;
  
  int main()
  {
      
      int num, suma = 0;
      
      cout << "Introduce un nÃºmero para calcular la suma de los cuadrados entre el 0 y el introducido: ";
      cin >> num;

      for (int i = 0; i <= num; i++) {
        suma = suma + i*i;
        
    }

      cout << "La suma de los cuadrados entre 0 y el " << num << " es: " << suma << "\n";
      
      return 0;
  }
