#include <iostream>
using namespace std;

int main()
{
   
   int numero;
   
   cout<<"Introduce un numero del 1 al 12: " "\n";
   cin>>numero;

   while (numero<=0 || numero>12){
       cout<<"El número introducido es incorrecto" "\n";
       cout<<"Introduce un número correcto" "\n";
       cin>>numero;
       
   }
   
   if (numero>0 && numero<13 ){
       
       if (numero==1){
           cout<<"Es enero " "\n";
       }
      
       if (numero==2) {
          cout<<"Es febrero " "\n";
       }
      
       if (numero==3) {
          cout<<"Es marzo " "\n";
       }
       
       if (numero==4) {
          cout<<"Es abril " "\n";
       }
       
       if (numero==5) {
          cout<<"Es mayo " "\n";
       } 
        
       if (numero==6) {
          cout<<"Es junio " "\n";
       }
    
       if (numero==7) {
          cout<<"Es julio " "\n";
       } 
       
       if (numero==8) {
          cout<<"Es agosto " "\n";
       }  
       
       if (numero==9) {
          cout<<"Es septiembre " "\n";
       }  
       
       if (numero==10) {
          cout<<"Es octubre " "\n";
       }  
       
       if (numero==11) {
          cout<<"Es noviembre " "\n";
       }  
       
       if (numero==12) {
          cout<<"Es diciembre " "\n";
       }  
   }
   
    return 0;
}
