#include <iostream>
using namespace std;

int main()
{
   
   double lado1, lado2, lado3;
   
   cout<<"Introduce un número correspondiente al primer lado: " "\n";
   cin>>lado1;
   
   cout<<"Introduce un número correspondiente al segundo lado: " "\n";
   cin>>lado2;
   
   cout<<"Introduce un número correspondiente al tercer lado: " "\n";
   cin>>lado3;

   
   if (lado1==lado2 && lado1==lado3 && lado2==lado3){
       cout<<"El triángulo es equilatero, todos sus lados son iguales" "\n";
   }
   
   else if (lado1!=lado2 && lado1!=lado3 && lado2!=lado3){
       cout<<"El triángulo es escaleno, todos sus lados son diferentes" "\n";
   }
   
   else {
       cout<<"El triángulo es isósceles, dos lados iguales" "\n";
   }
   
    return 0;
}
