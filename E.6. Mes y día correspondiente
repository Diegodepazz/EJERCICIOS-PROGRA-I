#include <iostream>
using namespace std;

int main()
{
   
   int numero;
   
   cout<<"Introduce un numero del 1 al 12: " "\n";
   cin>>numero;

   while (numero<=0 || numero>12){
       cout<<"El número introducido es incorrecto" "\n";
       cout<<"Introduce un número correcto" "\n";
       cin>>numero;
       
   }
   
   if (numero>0 && numero<13 ){
       
       if (numero==1){
           cout<<"Es enero y tiene 31 días  " "\n";
       }
      
       if (numero==2) {
          cout<<"Es febrero y tiene 28 o 29 días " "\n";
       }
      
       if (numero==3) {
          cout<<"Es marzo y tiene 31 días " "\n";
       }
       
       if (numero==4) {
          cout<<"Es abril y tiene 30 días  " "\n";
       }
       
       if (numero==5) {
          cout<<"Es mayo y tiene 31 días " "\n";
       } 
        
       if (numero==6) {
          cout<<"Es junio y tiene 30 días " "\n";
       }
    
       if (numero==7) {
          cout<<"Es julio y tiene 31 días " "\n";
       } 
       
       if (numero==8) {
          cout<<"Es agosto y tiene 31 días " "\n";
       }  
       
       if (numero==9) {
          cout<<"Es septiembre y tiene 30 días " "\n";
       }  
       
       if (numero==10) {
          cout<<"Es octubre y tiene 31 días " "\n";
       }  
       
       if (numero==11) {
          cout<<"Es noviembre y tiene 30 días " "\n";
       }  
       
       if (numero==12) {
          cout<<"Es diciembre y tiene 31 días " "\n";
       }  
   }
   
    return 0;
}
